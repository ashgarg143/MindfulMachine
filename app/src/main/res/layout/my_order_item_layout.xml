<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_item_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="start"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:textStyle="italic"
            android:text="250 KM"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="3"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_order_item_loading_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:maxLength="27"
                    android:textStyle="bold"
                    android:text="Noida, Uttar Pradesh, India"
                    android:textSize="17sp" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/tv_order_item_loading_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:maxLength="27"
                    android:text="17/09/2018"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/tv_order_item_loading_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:maxLength="27"
                    android:text="08:00-10:00"
                    android:textSize="16sp" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="3"
                android:orientation="vertical">


                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_order_item_destinatopn_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:maxLength="27"
                    android:text="Noida, Uttar Pradesh, India"
                    android:textSize="17sp" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/tv_order_item_destination_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:maxLength="27"
                    android:text="17/09/2018"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/tv_order_item_destination_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:maxLength="27"
                    android:text="08:00-10:00"
                    android:textSize="16sp" />


            </LinearLayout>

        </LinearLayout>

        <Button
            android:visibility="gone"
            android:id="@+id/bt_order_item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:padding="8dp"
            android:text="Pending"
            android:textColor="@android:color/white" />

    </LinearLayout>

</android.support.v7.widget.CardView>